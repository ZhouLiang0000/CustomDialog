<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseDialog" parent="android:Theme.Dialog">
        <!-- 是否允许对话框的背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 是否设置透明属性 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 没有标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 从下方弹上 -->
    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_hide</item>
    </style>

    <!-- 从上方方弹下 -->
    <style name="pop_down_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_down_show</item>
        <item name="android:windowExitAnimation">@anim/pop_down_hide</item>
    </style>

    <!-- 弹窗出现的动画效果 -->
    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

</resources>
